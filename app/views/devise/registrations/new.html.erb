


<div class="container device"> 
  <div class="device_frame">
    <p>新しいアカウントを作成</p>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
      
      <table>
        <tr>
          <th><%= f.label :required, "必須", class: "required" %></th>
          <td><%= f.text_field :username, autofocus: true, autocomplete: "email", :placeholder => "ユーザ名" %></td>
        </tr>
        <tr>
          <th><%= f.label :required, "必須", class: "required" %></th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "メールアドレス" %></td>
        </tr>
        <tr>
          <% if @minimum_password_length %>
          <% end %>
          <th><%= f.label :required, "必須", class: "required" %></th>
          <td><%= f.password_field :password, autocomplete: "new-password", :placeholder => "パスワード"%></td>
        </tr>
         <tr>
          <th><%= f.label :required, "必須", class: "required" %></th>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder => "パスワード確認" %></td>
        </tr>
      </table>
      <div>
        <ul>
          <li><%= f.submit "新しいアカウントを作成"%></li>
          <li><%= link_to "既にアカウントをお持ちの方はログイン", "/users/sign_in" %></li>
        </ul>
      </div>
    <% end %>
   <div>
  </div>
  
  
  
  



