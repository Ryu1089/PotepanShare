  <section class="hero is-success">
    <div class="hero-body">
      <div class="container">
        <h1 class="title">
          予約内容確認画面
        </h1>
      </div>
    </div>
  </section>
  
  
  <section class="section">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-6">
          <%= form_with model: @resarvation, local:true do |f| %>
          <%= f.hidden_field :room_id, value: @room.id %>
          <%= f.hidden_field :resarvation_id, value: @resarvation.id %> 
          <div class="col-md-6">
            <table class="reservation-table">
               <tbody>
                  <tr>
                    <td><%= f.label :start, "開始日" %></td>
                    <td><%= f.date_field  :start, :readonly => true, class: 'form-control mb-4'  %></td>
                  </tr>
                  <tr>
                    <td><%= f.label :end, "終了日" %></td>
                    <td><%= f.date_field  :end, :readonly => true, class: 'form-control mb-4'  %></td>
                  </tr>
                  <tr>
                    <td><%= f.label :people, "人数" %></td>
                    <td><%= f.number_field  :people, :readonly => true, class: 'form-control mb-4'  %></td>
                  </tr>
                
                  <tr>
                    <td><%= f.label :total_price, "合計金額" %></td>
                    <td><%= f.number_field  :total_price, :readonly => true %><span>円</span></td>
                  </tr>
               </tbody>
            </table>
          </div>
        
          <%= f.submit "この日程で予約する", class:  "button is-success"   %>        
          <% end %>
        </div>
      </div>
    </div>
  </section>
  


  