<div class="container-fiuld user"> 
    <div class="row">
       <div class="container-fiuld user"> 
          <div class="col-lg-2 user-nav user-nav-mobile d-lg-none">
            <ul>
              <li class="active"><a href="/users/">アカウント</a></li>
              <li class=""><a href="/users//:id/edit">プロフィール</a></li>
            </ul>
          </div>
        <div class="col-md-10 user-view">
            <div class="user-view-box">
                <div class="update-content">
                    <div class="row">
                        <h5>プロフィール</h5>
                    </div>
                </div>
                
                <%= form_with model:@user do |f| %>
                
                <div class="update-content">
                    <div class="row">
                        <label class="col-md-3" for="email">アイコン画像</label>
                        <div class="col-md-9"></div>
                    </div>
                </div>
                <div class="update-content">
                    <div class="row">
                        <label class="col-md-3" for="password">アイコン画像</label>
                        <div class="col-md-9"></div>
                    </div>
                </div>
                <div class="update-content">
                    <div class="row">
                        <label class="col-md-9">
                          <%= f.label :name,"名前" %>
                        </label>
                        <label class="col-md-9">
                          <%= f.text_field :name %>
                        </label>
                    </div>
                </div>
                <div class="update-content">
                    <div class="row">
                        <label class="col-md-9">
                          <%= f.label :introduction,"自己紹介" %>
                        </label>
                        <label class="col-md-9">
                          <%= f.text_area :introduction %>
                        </label>
                    </div>
                </div>
                <div class="update-content">
                    <div class="row">
                        <%= f.submit"更新" %>
                    </div>
                </div>
                <% end %>
            </div>
        </div>
    </div>
