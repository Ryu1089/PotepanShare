<h1 class="title">
  部屋詳細
</h1>
     
 

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-7">
        <div class="card">
          <div class="card-image">
            <figure class="image is-2by1">
    　　　   　　<%= attachment_image_tag @room, :image, fallback: "no-image.png" %>
  　     　   </figure>
          </div>
          
          <div class="card-content">
            <div class="media">
              <div class="media-content">
                <p class="room-profile-name"><%= @room.introduction %></p>
              </div>
              <div class="content">
              <table class="table is-narrow">
                  <th><%= @room.address %></th>
                  <th><%= @room.name %></th>
              </table> 
               </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="column is-4">
      <%= form_with model: @resarvation, url: {controller: 'resarvations', action: 'new' }, local: true do |f| %>
      <%= f.hidden_field :room_id, value: @room.id %>
      
        <article class="">
          <div class="panel-block">
            <p class="control">
              <%= f.label :start ,"開始日" %>
              <%= f.datetime_field :start, class: "form-control datetimepicker-input", id: "start_time", data: {toggle: "datetimepicker", target: "#start_time"} %>
            </p> 
            <p class="control">
              <%= f.label :end ,"終了日" %>
              <%= f.datetime_field :end, class: "form-control datetimepicker-input", id: "end_time", data: {toggle: "datetimepicker", target: "#end_time"} %>
            </p>
            <p class="control">
              <%= f.label :people ,"人数" %>
              <%= f.number_field :people, class: "form-control datetimepicker-input", id: "people", data: {toggle: "datetimepicker", target: "#people"} %>
            </p>
          </div>
            <%=  f.submit "予約する", class:  "button is-success" %>
          <% end %>
        </article>
      </div>
    </div>
  <section>
  



  
  

